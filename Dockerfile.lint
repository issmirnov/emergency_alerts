# Dockerfile for Emergency Alerts Integration Linting and Formatting
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install Python linting and formatting tools
RUN pip install --no-cache-dir \
    black==23.12.1 \
    flake8==7.0.0 \
    isort==5.13.2 \
    mypy==1.8.0

# Copy source code
COPY custom_components/ ./custom_components/
COPY pyproject.toml ./

# Create entrypoint script
RUN echo '#!/bin/bash\n\
set -e\n\
\n\
echo "ðŸ” Running Emergency Alerts Integration Linting Suite"\n\
echo "=" * 50\n\
\n\
echo "ðŸ“‹ Checking Python formatting with Black..."\n\
black --check --diff custom_components/emergency_alerts/\n\
if [ $? -eq 0 ]; then\n\
    echo "âœ… Black formatting passed"\n\
else\n\
    echo "âŒ Black formatting failed"\n\
    echo "ðŸ’¡ Run: docker run --rm -v $(pwd):/app emergency-alerts-lint black custom_components/emergency_alerts/"\n\
    exit 1\n\
fi\n\
\n\
echo "ðŸ“‹ Checking Python imports with isort..."\n\
isort --check-only --diff custom_components/emergency_alerts/\n\
if [ $? -eq 0 ]; then\n\
    echo "âœ… isort passed"\n\
else\n\
    echo "âŒ isort failed"\n\
    echo "ðŸ’¡ Run: docker run --rm -v $(pwd):/app emergency-alerts-lint isort custom_components/emergency_alerts/"\n\
    exit 1\n\
fi\n\
\n\
echo "ðŸ“‹ Linting Python with flake8..."\n\
flake8 custom_components/emergency_alerts/ --max-line-length=88 --extend-ignore=E203,W503\n\
if [ $? -eq 0 ]; then\n\
    echo "âœ… flake8 passed"\n\
else\n\
    echo "âŒ flake8 failed"\n\
    exit 1\n\
fi\n\
\n\
echo "ðŸ“‹ Type checking with mypy..."\n\
mypy custom_components/emergency_alerts/ --ignore-missing-imports || echo "âš ï¸  mypy issues found (non-blocking)"\n\
\n\
echo "ðŸŽ‰ All linting checks passed!"\n\
' > /entrypoint.sh && chmod +x /entrypoint.sh

# Default command
ENTRYPOINT ["/entrypoint.sh"] 