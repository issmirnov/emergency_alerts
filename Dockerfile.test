# Dockerfile for Emergency Alerts Integration Backend Testing
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    build-essential \
    gcc \
    g++ \
    make \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy integration files
COPY custom_components/ ./custom_components/
COPY pyproject.toml ./
COPY pytest.ini ./
COPY custom_components/emergency_alerts/test_requirements.txt ./test_requirements.txt

# Install Python dependencies
RUN pip install --no-cache-dir -r test_requirements.txt

ENV PYTHONPATH="/app:/usr/local/lib/python3.11/site-packages"

# Create test runner script
RUN echo '#!/bin/bash\nset -e\necho "ðŸš¦ Running Emergency Alerts Integration Backend Tests"\necho "Working directory: $(pwd)"\necho "Test files:"\nfind custom_components/emergency_alerts/tests -name "*.py" -type f\npytest custom_components/emergency_alerts/tests/ --cov=custom_components.emergency_alerts --cov-report=term-missing -v' > /app/run_tests.sh && chmod +x /app/run_tests.sh

ENTRYPOINT ["/app/run_tests.sh"] 